@{
    ViewBag.Title = "Home Page";
}

<!-- Page Header -->

<header class="masthead" style="background-image: url('Img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Monash News</h1>
                    <span class="subheading">Monash news is a news website for getting the lateset news.</span>
                    <p>
                        @Html.ActionLink("Start browsing", "News", "Home", null, new { @class = "btn btn-primary btn-lg" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>

